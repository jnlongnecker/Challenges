<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Valid_email_format</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(ISBLANK(Email)) &amp;&amp; NOT(REGEX(Email, &quot;[\\w\\d_]+@\\w{2,}\\.\\w{2,4}&quot;))</errorConditionFormula>
    <errorDisplayField>Email</errorDisplayField>
    <errorMessage>Email must be in a valid email format.</errorMessage>
</ValidationRule>
