<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Valid_zip_code</fullName>
    <active>true</active>
    <errorConditionFormula>VLOOKUP(
$ObjectType.ZipCode__c.Fields.Name, $ObjectType.ZipCode__c.Fields.Name,  
MailingPostalCode ) != MailingPostalCode</errorConditionFormula>
    <errorDisplayField>MailingPostalCode</errorDisplayField>
    <errorMessage>Zip code must be a valid zip code we serve.</errorMessage>
</ValidationRule>
